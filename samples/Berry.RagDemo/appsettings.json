{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Berry": "Debug"
    }
  },
  "Berry": {
    "UseBuiltinModules": false,
    "EnableAutoDiscovery": false
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Berry": "Debug"
      }
    }
  },
  "ConnectionStrings": {
    "Default": "Data Source=Data/ragdemo.db"
  },
  "EmbeddingModel": {
    "Dimension": "384",
    "MaxTokenLength": "512",
    "PoolingStrategy": "mean"
  },
  "Rag": {
    "DefaultTopK": 5,
    "DefaultChunkSize": 500,
    "DefaultChunkOverlap": 50,
    "EnableConversationMemory": true,
    "MaxConversationTurns": 10
  }
}
